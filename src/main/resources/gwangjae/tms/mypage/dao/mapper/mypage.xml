<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="gwangjae.tms.mypage.dao.mapper.MypageMapper">
	<resultMap id="reserveMap" type="Reservation">
		<id property="reservationId" column="r_id"/>
		<result property="userNo" column="user_id"/>
		<result property="hallNo" column="h_id"/>
		<result property="performanceId" column="perf_id"/>
		<result property="roundId" column="rnd_id"/>
		<result property="roundDate" column="r_date"/>
		<result property="roundState" column="r_state"/>	
	</resultMap>
	
	<select id="getReservations" resultMap="reserveMap">
		select * from reserves
		where user_id = #{userNo}
	</select>
	
	<delete id="delReservation" parameterType="int">
		delete reserves
		where r_id = #{reservationId}
	</delete>
</mapper>