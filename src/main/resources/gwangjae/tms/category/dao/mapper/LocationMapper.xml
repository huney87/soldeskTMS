<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="gwangjae.tms.category.dao.mapper.LocationMapper">
	
	<resultMap id="LocationMap" type="location">
		<id property="locationId" column="loc_id"/>
		<result property="locationName" column="loc_name"/>
		<result property="locationDetail" column="loc_detail"/>
	</resultMap>
	
	<select id="getLocationes" resultMap="LocationMap">
		select loc_id, loc_name, loc_detail
		from locations
	</select>
	
	<select id="getLocation" resultMap="LocationMap" parameterType="int">
		select loc_id, loc_name, loc_detail
		from locations
		where loc_id = #{locationId}
	</select>
	
	<insert id="addLocation" parameterType="Location">
    	insert into locations (loc_name, loc_detail)
    	values (user_no_seq.NEXTVAL, #{locationName}, #{locationDetail})
    </insert>
    
    <update id="modLocation" parameterType="Location">
    	update locations
    	loc_name = #{locationName},
    	loc_detail = #{locationDetail}
    	where loc_id = #{locationId}
    </update>
    
    <delete id="remLocation" parameterType="int">
    	delete from locations
    	where loc_id = #{locationId}
    </delete>
</mapper>